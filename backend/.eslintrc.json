{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": ["error", 4],
        "no-console": "error",
        "promise/no-native": "off",
        "prefer-arrow-callback": "error",
        "consistent-return": "off",
        "import/no-extraneous-dependencies": "off",
        "no-underscore-dangle": "off",
        "object-curly-newline": "off"
    }
}
